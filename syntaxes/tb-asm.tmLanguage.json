{
	"scopeName": "source.tb",
	"fileTypes": [".tb"],
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Tristan Barrow Assembly",
	"patterns": [
		{ "include": "#operation" }, 
		{ "include": "#register" },
		{ "include": "#hex" }, 
		{ "include": "#memory" },
		{ "include": "#comment" }
	],
	"repository": {
		"operation": {
			"patterns": [{
				"name": "operation.code",
				"match": "NOOP|HALT|MOV|LOAD|SAVE|DLOAD|DSAVE|JMP|JIF|ADD|SUB|MUL|DIV|AND|OR|XOR|NOT|IMOV|SET|noop|halt|mov|load|save|dload|dsave|jmp|jif|add|sub|mul|div|and|or|xor|not|imov|set"
			}]
		},
		"register": {
			"patterns": [{
				"name": "register.code",
				"match": "acc|r10|r11|r12|r13|r14|r15|r1|r2|r3|r4|r5|r6|r7|r8|r9"
			}]
		},
		"hex": {
			"patterns": [{
				"name": "hex.code",
				"match": "0x[0-9a-fA-F]+"
			}]
		},
		"memory": {
			"patterns": [{
				"name": "memory.code",
				"match": "D0|D1|D2|D3|D4|D5|D6|D7|Mx[0-9]+"
			}]
		},
		"comment": {
			"patterns": [{
				"name": "comment.line",
				"match": "#.*$"
			}]
		}

	}
}
